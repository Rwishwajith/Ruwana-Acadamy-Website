@using RuwanaAcademy_Enterprise.Common
@model IEnumerable<RuwanaAcademy_Enterprise.Areas.Student.Models.ClassRegVM>

<br />
<h4>Class Registrations</h4>

<table class="mGrid">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LecturerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfConduct)
            </th>
            @{
                if (ViewBag.IsToEdit)
                {
                    <th class="btn-1">
                        @Html.NoEncodeActionLink("<span style='color:white'>Add</span>", "Add Class Registration", "ChildCreate", routeValues: new { StudentID = ViewBag.StudentID }, htmlAttributes: new { data_popup_editor = "", @class = "btn btn-primary pull-right btn-sm", data_title = "Add Class Registration", data_popup_width = "600" })
                    </th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfConduct)
            </td>
            @{
                if (ViewBag.IsToEdit)
                {
                    <td class="btn-3">
                        <div class="btn-toolbar">
                            @using (Html.BeginForm("ChildDelete", "StudentReg", new { id = item.ClassRegID }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil' style='color:white'>Edit</span>", "Edit Class Registration", "ChildEdit", routeValues: new { id = item.ClassRegID }, htmlAttributes: new { data_popup_editor = "", @class = "btn btn-success btn-sm", data_title = "Edit Class Registration", data_popup_width = "600" })
                                @Html.ConfirmSubmitButton("<span class='glyphicon glyphicon-trash'>Delete</span>", "Are you sure you want to delete?", "Confirm Class Registration deletion", "<span class='glyphicon glyphicon-trash'></span> Delete", new { data_popup_delete = "", @class = "btn btn-danger btn-sm", style = "min-width:75px" })
                            }
                        </div>
                    </td>
                }
             }
         </tr>
        }
    </tbody>
</table>

@if (ViewBag.IsToEdit)
{
    Html.RenderPartial("~/Areas/Base/Views/Shared/_PartialAlert.cshtml");
}


